@{
    ViewData["Title"] = "Tài khoản";
}
<form style="padding: 20px 200px;">
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <div>
                <h3 style="margin-bottom:20px">Thông tin tài khoản</h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="checkout-form-list">
                            <label>Họ và tên<span class="required">*</span></label>
                            <input disabled class="edit-information" type="text" id="edit-user-name" placeholder="">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="checkout-form-list">
                            <label>Email<span class="required">*</span></label>
                            <input disabled type="email" id="edit-user-email" placeholder="">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="checkout-form-list">
                        <label>Giới tính<span class="required">*</span></label>
                            <input disabled class="edit-information" disabled type="text" id="edit-user-gender" placeholder="">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="checkout-form-list">
                            <label>Ngày sinh<span class="required">*</span></label>
                            <input disabled id="edit-user-birthday" class="edit-information" type="text" tabindex="0">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="checkout-form-list">
                            <label>Số điện thoại<span class="required">*</span></label>

                            <input disabled id="edit-user-phone" class="mb-10 edit-information" type="text" placeholder="Nhập số điện thoại">
                        </div>
                    </div>
                     <div class="col-md-12">
                        <div class="checkout-form-list">
                            <label>Địa chỉ<span class="required">*</span></label>
                            <input disabled id="edit-user-address" class="mb-10 edit-information" type="text" placeholder="Nhập địa chỉ" tabindex="0">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="checkout-form-list">
                            <label>Quê quán<span class="required">*</span></label>
                            <input disabled id="edit-user-hometown" class="mb-10 edit-information" type="text" placeholder="Nhập quê quán" tabindex="0">
                        </div>
                    </div>

                    <div class="cols gap10" id="edit-information-button" style="display:none; gap: 20px; ">
                        <div style="display:flex; gap: 20px;">
                            <button style="width:150px;" type="button" id="btn-save-information" class="tpcheck-btn">Lưu thông tin</button>
                            <button style="width:150px; background:white; color:#96ae00;" type="button" id="btn-cancle-edit-information" class="tpcheck-btn">Huỷ</button>
                        </div>
                        
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <div class="checkbox-form">
                <label class="body-title mb-20">Ảnh đại diện</label>
                    <div class="upload-image mb-16" style="margin-bottom:30px">
                        <div class="item" style="display:flex; justify-content:center">
                            <label class="uploadfile mb-0" for="edit-avatar-input" style="gap:0; cursor:pointer;">
                                <!-- Ảnh -->
                                <div class="img-preview-account" style="width:100%;">
                                    <img style="object-fit: contain; height:250px;" id="edit-avatar-preview">
                                <input class="form-control-plaintext edit-information" disabled style="display:none" type="file" id="edit-avatar-input" accept="image/*">
                                </div>
                            </label>
                        </div>
                    </div>
                <div style="display: flex; justify-content:space-between">
                    <label class="body-title mb-20">Chức vụ</label>
                    <p id="user-list-roles"></p>
                </div>
                <button style="width:150px" type="button" id="btn-edit-information" class="tpcheck-btn">Sửa thông tin</button>
                <button style="width:150px; margin-top:20px" type="button" id="btn-change-password" class="tpcheck-btn">Đổi mật khẩu</button>

                <!-- Đổi mật khẩu -->
                <div id="change-password-area" style="display:none; margin-top:20px;">
                    <div class="checkout-form-list">
                        <label for="create-user-password">Mật khẩu <span class="tf-color-1">*</span></label>
                        <input id="create-user-password" autocomplete="new-password" type="password" placeholder="Mật khẩu hiện tại" tabindex="0" value="">
                        <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                    </div>
                    <!-- Mật khẩu -->
                    <div class="checkout-form-list">
                        <label for="new-user-password">Mật khẩu mới <span class="tf-color-1">*</span></label>
                        <input id="new-user-password" autocomplete="new-password" type="password" placeholder="Nhập mật khẩu mới" tabindex="0" value="">
                        <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                    </div>

                    <!-- Xác nhận mật khẩu -->
                    <div class="checkout-form-list">
                        <label for="new-user-repassword" >Xác nhận mật khẩu <span class="tf-color-1">*</span></label>
                        <input onchange="validateChangePassword()" id="new-user-repassword" autocomplete="new-password"type="password" placeholder="Nhập lại mật khẩu" tabindex="0" value="">
                        <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                    </div>
                    <div class="cols gap10" style="display:flex; gap: 20px;">
                        <button style="width:150px;" type="button" id="btn-save-change-password" class="tpcheck-btn">Xác nhận</button>
                        <button style="width:150px; background:white; color:#96ae00;" type="button" id="btn-cancle-change-password" class="tpcheck-btn">Huỷ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/js/API/Setting/account-setting.js"></script>