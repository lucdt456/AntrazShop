@{
    ViewBag.Title = "Danh sách sản phẩm";
}

@* Modal View *@

<div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" style="max-width: 75vw">
        <div class="modal-content" style="">
            @Html.Partial("_ModalListPartial")
        </div>
    </div>
</div>


<div class="main-content-inner">
    <!-- main-content-wrap -->
    <div class="main-content-wrap">
        <div class="flex items-center flex-wrap justify-between gap20 mb-27">
            <h3>Danh sách sản phẩm</h3>

            <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                <li>
                    <a href="index.html"><div class="text-tiny">Manager</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <a href="#"><div class="text-tiny">Product</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <div class="text-tiny">Product List</div>
                </li>
            </ul>
        </div>
        <!-- product-list -->
        <div class="wg-box" style="overflow:auto;">
            <div class="title-box">
                <i class="icon-coffee"></i>
                <div class="body-text">Tìm kiếm theo tên sản phẩm ...</div>
            </div>
            <div class="flex items-center justify-between gap10 flex-wrap">

                <div class="wg-filter flex-grow">
                    <div class="show">
                        <div class="text-tiny">Hiển thị</div>
                        <div class="select">
                            <select id="sizePage" class="">
                                <option>5</option>
                                <option>10</option>
                                <option>20</option>
                            </select>
                        </div>
                        <div class="text-tiny">Sản phẩm</div>
                    </div>
                    <form class="form-search">
                        <fieldset class="name">
                            <input type="text" placeholder="Tìm kiếm ..." class="" id="searchInput" tabindex="2">
                        </fieldset>
                        <div class="button-submit">
                            <button class="" type="submit"><i class="icon-search"></i></button>
                        </div>
                    </form>
                </div>
                <a class="tf-button style-1 w208" href="/admin/product/create"><i class="icon-plus"></i>Thêm mới</a>
            </div>
            <table class="antraz-table">
                <thead>
                    <tr class="antraz-table-title">
                        <th>Tên sản phẩm</th>
                        <th>ID</th>
                        <th style="width: 15%">Giá</th>
                        <th>Tồn kho</th>
                        <th>Giảm giá</th>
                        <th>Trạng thái</th>
                        <th>Thương hiệu</th>
                        <th>Danh mục</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody id="product-list">
                    <tr>
                    </tr>
                </tbody>
            </table>


            <div class="divider"></div>
            <div class="flex items-center justify-between flex-wrap gap10">
                <div class="text-tiny" id="totalProduct"></div>
                <ul class="wg-pagination" id="pageNumber">
                    <li>
                        <a id="firstPageButton"><i class="fas fa-angle-double-left"></i></a>
                    </li>

                    <li>
                        <a id="leftPageButton"><i class="fa-solid fa-angle-left"></i></a>
                    </li>

                    <li>
                        <a id="rightPageButton"><i class="fa-solid fa-angle-right"></i></a>
                    </li>
                    <li>
                        <a id="endPageButton"><i class="fa-solid fa-angles-right"></i></a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /product-list -->
    </div>
    <!-- /main-content-wrap -->
</div>
<script src="/admin/js/api-jquery/product/listproduct.js"></script>