@{
    ViewData["Title"] = "Cài đặt";
}
<div class="main-content-inner">
    <div class="main-content-wrap">

        <form class="tf-section-2" style="display:flex; gap:18px;">
            <div class="wg-box">
                <fieldset>
                    <label class="body-title mb-20">Ảnh đại diện</label>
                    <div class="upload-image mb-16">
                        <div class="item" style="width:100%">
                            <label class="uploadfile mb-0" for="edit-avatar-input" style="gap:0;">
                                <!-- Ảnh -->
                                <div class="img-preview-account" style="width:100%;">
                                    <img style="object-fit: contain;" id="edit-avatar-preview">
                                </div>
                                <!-- Input -->
                                <input disabled class="form-control-plaintext edit-information" type="file" id="edit-avatar-input" accept="image/*">
                            </label>
                        </div>
                    </div>
                </fieldset>
                <div style="display: flex; justify-content:space-between">
                    <label class="body-title mb-20">Chức vụ</label>
                    <p id="user-list-roles"></p>
                </div>
                <div style="display:flex; justify-content: right;">
                    <button type="button" style="max-width:250px;" id="btn-edit-information" class="tf-button style-1 w-full">Sửa thông tin</button>
                </div>
                <div style="display:flex; justify-content: right;">
                    <button onclick="changePassword()" type="button" style="max-width:250px;" id="btn-change-password" class="tf-button style-1 w-full">Đổi mật khẩu</button>
                </div>
                <!-- Đổi mật khẩu -->
                <div id="change-password-area" style="display:none;">
                    <fieldset class="password">
                        <label for="create-user-password" class="body-title mb-10">Mật khẩu <span class="tf-color-1">*</span></label>
                        <input id="create-user-password" autocomplete="new-password" class="password-input validate-input mb-10" type="password" placeholder="Mật khẩu hiện tại" tabindex="0" value="">
                        <span class="show-pass">
                            <i class="icon-eye view"></i>
                            <i class="icon-eye-off hide"></i>
                        </span>
                        <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                    </fieldset>
                    <!-- Mật khẩu -->
                    <fieldset class="password">
                        <label for="new-user-password" class="body-title mb-10">Mật khẩu mới <span class="tf-color-1">*</span></label>
                        <input id="new-user-password" autocomplete="new-password" class="password-input validate-input mb-10" type="password" placeholder="Nhập mật khẩu mới" tabindex="0" value="">
                        <span class="show-pass">
                            <i class="icon-eye view"></i>
                            <i class="icon-eye-off hide"></i>
                        </span>
                        <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                    </fieldset>

                    <!-- Xác nhận mật khẩu -->
                    <fieldset class="password">
                        <label for="new-user-repassword" class="body-title mb-10">Xác nhận mật khẩu <span class="tf-color-1">*</span></label>
                        <input onchange="validateChangePassword()" id="new-user-repassword" autocomplete="new-password" class="password-input validate-input mb-10" type="password" placeholder="Nhập lại mật khẩu" tabindex="0" value="">
                        <span class="show-pass">
                            <i class="icon-eye view"></i>
                            <i class="icon-eye-off hide"></i>
                        </span>
                        <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                    </fieldset>
                    <div class="cols gap10">
                        <button type="button" id="btn-save-change-password" class="tf-button w-full">Xác nhận</button>
                        <button type="button" id="btn-cancle-change-password" class="tf-button style-1 w-full">Huỷ</button>
                    </div>
                </div>

            </div>
            <div class="wg-box">
                <!-- Họ và tên -->
                <fieldset>
                    <label for="edit-user-name" class="body-title mb-10">Họ và tên <span class="tf-color-1">*</span></label>
                    <input id="edit-user-name" disabled class="mb-10 validate-input edit-information" type="text" placeholder="Nhập tên của bạn" tabindex="0">
                    <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                </fieldset>

                <!-- Email -->
                <fieldset class="email">
                    <label for="edit-user-email" class="body-title mb-10">Email <span class="tf-color-1">*</span></label>
                    <input autocomplete="username" disabled id="edit-user-email" class="mb-10 validate-input" type="email" placeholder="Nhập địa chỉ email" tabindex="0" value="">
                    <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                </fieldset>

                <div class="gap22 cols">
                    <!-- Giới tính -->
                    <fieldset>
                        <label for="edit-user-gender" class="body-title mb-10">Giới tính</label>
                        <div class="select">
                            <select disabled id="edit-user-gender" class="mb-10 edit-information">
                                <option value="">Chọn</option>
                                <option>Nam</option>
                                <option>Nữ</option>
                            </select>
                            <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                        </div>
                    </fieldset>

                    <!-- Ngày sinh -->
                    <fieldset>
                        <label for="edit-user-birthday" class="body-title mb-10">Ngày sinh</label>
                        <input id="edit-user-birthday" disabled class="mb-10 edit-information" type="date" placeholder="Nhập ngày sinh" tabindex="0">
                        <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                    </fieldset>
                </div>
                <!-- Số điện thoại -->
                <fieldset class="phoneNumber">
                    <label for="edit-user-phone" class="body-title mb-10">Số điện thoại</label>
                    <input disabled id="edit-user-phone" class="mb-10 edit-information" type="tel" placeholder="Nhập số điện thoại" tabindex="0">
                    <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                </fieldset>

                <!-- Địa chỉ -->
                <fieldset class="adress">
                    <label for="edit-user-address" class="body-title mb-10">Địa chỉ</label>
                    <input disabled id="edit-user-address" class="mb-10 edit-information" type="text" placeholder="Nhập địa chỉ" tabindex="0">
                    <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                </fieldset>

                <!-- Quê quán -->
                <fieldset class="adress">
                    <label for="edit-user-hometown" class="body-title mb-10">Quê quán</label>
                    <input disabled id="edit-user-hometown" class="mb-10 edit-information" type="text" placeholder="Nhập quê quán" tabindex="0">
                    <div class="text-tiny error-message text-danger" style="font-style : italic"></div>
                </fieldset>

                <div class="cols gap10" id="edit-information-button" style="display:none">
                    <button type="button" id="btn-save-information" class="tf-button w-full">Lưu thông tin</button>
                    <button type="button" id="btn-cancle-edit-information" class="tf-button style-1 w-full">Huỷ</button>
                </div>
            </div>

        </form>
    </div>
</div>
<script src="~/js/API/Setting/account-setting.js"></script>